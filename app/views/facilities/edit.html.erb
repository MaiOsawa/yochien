<h1>情報更新</h1>

<%= form_with model: @facilities, local: true, method: "patch" do |f| %>

    <div class="form-group">
        <label>名称</label>
        <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
        <label>住所</label>
        <%= f.text_field :address, class: "form-control" %>
    </div>
    <div class="form-group">
        <label>電話番号</label>
        <%= f.text_field :tel, class: "form-control" %>
    </div>

    <div class="form-group">
        <label>給食の有無</label>
    </div>
    <div class="form-group">
        <label>プレの有無</label>
    </div>

<%= f.submit "更新", class: "btn btn-primary" %>
<%= link_to "戻る", facilities_path, class: "btn btn-submit" %>
<% end %>
