<h1><%= type %></h1>

<%= form_with model: facility, url: my_facilities_path, local: true, method: method do |f| %>

    <div class="form-group">
        <label>名称</label>
        <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
        <label>住所</label>
        <%= f.text_field :address, class: "form-control" %>
    </div>
    <div class="form-group">
        <label>電話番号</label>
        <%= f.text_field :tel, class: "form-control" %>
    </div>

    <div class="form-group">
        <label>給食の有無</label><br>
        <%= f.radio_button :lunch, :presence %>
        <%= f.label :lunch, "あり", { value: :presence } %>
        <%= f.radio_button :lunch, :absence %>
        <%= f.label :lunch, "なし", { value: :absence } %>
    </div>
    <div class="form-group">
        <label>プレの有無</label><br>
        <%= f.radio_button :pre, :presence %>
        <%= f.label :pre, "あり", { value: :presence } %>
        <%= f.radio_button :pre, :absence %>
        <%= f.label :pre, "なし", { value: :absence } %>
    </div>
    <div class="form-group">
        <label>フリーメモ</label>
        <%= f.text_field :memo, class: "form-control" %>
    </div>
    
    <%= f.submit type, class: "btn btn-primary" %>
    <%= link_to "戻る", schedules_path, class: "btn btn-light" %>

<% end %>
