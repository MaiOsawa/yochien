<h1>スケジュール<%= type %></h1>

<% schedule.errors.full_messages.each do |m| %>
    <div class="alert alert-warning" role="alert">
        <p><%= m %></p>
    </div>
<% end %>

<%= form_with model: schedule, local: true, method: method do |f| %>

    <div class="form-group">
        <%= f.date_field :date, class: 'form-control' %>
    </div>
    
    <div class="form-group">
        <label>場所</label>
        <%= f.text_field :place, class: "form-control" %>
    </div>
    
    <%= link_to "戻る", schedules_path, class: "btn btn-secondary" %>
    <%= f.submit type, class: "btn btn-primary"%>

<% end %>