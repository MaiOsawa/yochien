<h1>家計簿スケジュール新規登録</h1>

<%= form_with model: @schedule, local: true do |f| %>

<div class="form-group">
    <label>年</label>
    <%= f.number_field :year, class: "form-control" %>
</div>

<div class="form-group">
    <label>月</label>
    <%= f.number_field :month, class: "form-control" %>
</div>

<div class="form-group">
    <label>日</label>
    <%= f.number_field :day, class: "form-control" %>
</div>

<div class="form-group">
    <label>場所</label>
    <%= f.text_field :place, class: "form-control" %>
</div>

<%= link_to "戻る", schedules_path, class: "btn btn-secondary" %>
<%= f.submit "登録", class: "btn btn-primary"%>

<% end %>